{{> header }}
<table>
	<thead>
		<tr>
			<th scope="col">Location</th>
			<th scope="col">Time</th>
			<th scope="col">Path</th>
		</tr>
	</thead>
	{{#each body.movements}}
		<tr>
			<td>
				<p class="schedule-location">
				<a href="/stations/{{this.tiploc}}">{{this.location}}</a>&nbsp;<span class="schedule-location-tiploc">({{this.tiploc}})</span>
				</p>
				<p class="schedule-action">
				({{this.action}})
				</p>
			</td>
			<td>{{this.time_scheduled}}</td>
			<td>
				{{#if this.ends_path}}
					→<a href="/paths/{{this.ends_path}}">{{this.ends_path}}</a>
					{{#if this.starts_path}}
						&middot;
					{{/if}}
				{{/if}}
				{{#if this.starts_path}}
					<a href="/paths/{{this.starts_path}}">{{this.starts_path}}</a>→
				{{/if}}
			</td>
		</tr>
	{{/each}}
</table>


<h3>Trains running to this schedule</h3>
<ul>
	{{#each body.trains}}
	<li><a href="/train/{{this.id}}">{{this.date}} (#{{this.id}})</a></li>
	{{/each}}
</ul>
{{> footer }}
