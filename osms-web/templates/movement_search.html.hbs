<script src="/js/autocomplete.js"></script>
<form action="/movements" method="post">
	<legend>
		<h1 class="govuk-heading-m">
			Search for trains
		</h1>
	</legend>
	{{#if body.mvt_search.error}}
		<div class="govuk-error-summary" aria-labelledby="error-summary-title" role="alert" tabindex="-1" data-module="error-summary">
			<h2 class="govuk-error-summary__title" id="error-summary-title">
				There is a problem
			</h2>
			<div class="govuk-error-summary__body">
				<p>
				{{body.mvt_search.error}}
				</p>
			</div>
		</div>
	{{/if}}
	<div class="govuk-form-group">
		<label class="govuk-label" for="ts-tiploc">
			Location
			<span class="govuk-hint" id="ts-tiploc-verbiage">
				Type a TIPLOC or CRS code.
				<br>
				Example: 'STPANCI' for St Pancras Int'l.
				<br>
				(Turn on JavaScript for an interactive autocomplete system.)
			</span>
		</label>
		<div id="ts-tiploc-autocomplete">
			<input class="govuk-input govuk-!-width-one-half" id="ts-tiploc" type="text" name="ts-tiploc" value="{{#if body.mvt_search.station}}{{body.mvt_search.station}}{{/if}}" required></input>
		</div>
	</div>
	<div class="govuk-form-group">
		<label class="govuk-label" for="ts-date">
			Date
			<span class="govuk-hint">
				YYYY-MM-DD (ISO 8601) format.
			</span>
		</label>
		<input class="govuk-input govuk-!-width-one-third" id="ts-date" type="text" name="ts-date" value="{{body.mvt_search.date}}" required></input>
	</div>
	<div class="govuk-form-group">
		<label class="govuk-label" for="ts-time">
			Time
			<span class="govuk-hint">
				HH:MM format.
			</span>
		</label>
		<input class="govuk-input govuk-!-width-one-third" id="ts-time" type="text" name="ts-time" value="{{body.mvt_search.time}}" required></input>
	</div>
	<input class="govuk-button govuk-button--start" type="submit" value="Find trains">
</form>

